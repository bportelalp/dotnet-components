<div id="@Message.ToastId" class="toast @css" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
        @*<img src="..." class="rounded me-2" alt="...">*@
        <strong class="me-auto">@Message.Title</strong>
        <small>@date</small>
        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body">
        @Message.Message
        @if (Message.Dialog is not null)
        {
            <div class="mt-2 pt-2 border-top">
                @if (Message.Dialog.IsPrompt)
                {
                    <input type="text" @bind="promptText" />
                }
                <button type="button" class="btn btn-primary btn-sm" @onclick="() => OnPromptAnswered(true)">
                    @Message.Dialog.AcceptButton
                    </button>
                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="toast" @onclick="() => OnPromptAnswered(false)">
                    @Message.Dialog.DenyButton
                    </button>
            </div>
        }
    </div>
</div>
